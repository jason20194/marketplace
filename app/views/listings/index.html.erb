<p id="notice"><%= notice %></p>

<%= render 'navbar'%>

<h1>Card Listings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Clan</th>
      <th>Condition</th>
      <th>Seller</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.name %></td>
        <td><%= Clan.find(card.clan_id).name %></td>
        <td><%= Condition.find(card.condition_id).card_type %></td>
        <td><%= Listing.find(card.listing_id).user.email %></td>
        <td><%= link_to 'Show', market_show_path(card), class:"show" %></td> 
        <% if card.listing.user_id == current_user.id  %>
          <td><%= link_to 'Edit', edit_card_path(card), class:"show" %></td>
          <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' }, class:"show" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button><%= link_to 'New Card Listing', listings_new_path %></button>




