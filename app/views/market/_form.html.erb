<%= form_with(model:@card, url:market_card_path) do |form| %>
  

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :clan_id %>
    <%= form.select :clan_id, options_for_select( Clan.all.collect { |u| [u.name, u.id] } ), :selected => card.clan_id %>
  </div>

  <div class="field">
    <%= form.label :condition_id %>
    <%= form.select :condition_id, Condition.all.collect{|u| [u.card_type, u.id]} %>
  </div>

  <div class="field">
    <%= form.label :listing_id %>
    <%= form.select :listing_id, Listing.where(user_id: current_user.id).collect { |u| [u.title, u.id] } %>
  </div>

  <div class="field">
    <%= form.label :picture %>
    <%= form.file_field :picture, accept:'image/png,image/gif,image/jpeg,image/jpg' %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<button><%= link_to 'Back', listings_index_path %></button>
